<?php

use Sami\Sami;
use Symfony\Component\Finder\Finder;

$iterator = Finder::create()
    ->files()
    ->name('*.php')
    ->exclude('Resources')
    ->exclude('Tests')
    ->in(__DIR__)
;

return new Sami($iterator, array(
    'title'     => 'Litmus API',
    'build_dir' => __DIR__ . '/../litmus-doc/%version%',
    'cache_dir' => __DIR__ . '/../litmus-doc/%version%',
    'default_opened_level' => 4,
));